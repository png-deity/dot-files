[bar/main]
monitor = eDP1
width = 100%
height = 2.22222%
fixed-center = true

foreground = ${colors.foreground}
background = ${colors.background}

font-0 = Noto Sans:pixelsize=21:weight=bold;2
font-1 = cryptocoins:style=Regular;0

modules-left = i3 
modules-center = text
modules-right = temperature pulseaudio battery 

enable-ipc = true

[bar/external]
monitor = DP1
width = 100%
height = 2.22222%
fixed-center = true

foreground = ${colors.foreground}
background = ${colors.background}

font-0 = Noto Sans:pixelsize=16:weight=bold;2
font-1 = cryptocoins:style=Regular;0

modules-left = i3 
modules-center = text
modules-right = pulseaudio battery

enable-ipc = true
format-pulseaudio-margin= 30 

;M O D U L E S

[module/i3]
type = internal/i3

pin-workspaces = true
index-sort = true
enable-click = false
enable-scroll = false

format = <label-state>

label-focused = "%index%"
label-focused-foreground = ${colors.highlight}
label-focused-background = ${colors.background}

label-separator = |
label-separator-padding = 2
label-separator-foreground = ${colors.foreground}

[module/battery]
type = custom/script
exec = ~/.config/polybar/battery-combined-shell.sh
interval = 100

[module/day-until]
type = custom/script
exec = ~/.config/polybar/day-until.sh
interval = 2000

[module/motivation]
type = custom/script
exec = ~/.config/polybar/shuffle-line.sh
interval = 86000

[module/updates-arch-combined]
type = custom/script
exec = ~/.config/polybar/updates-arch-combined.sh
interval = 600

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = false

label-muted = " MUTE " 
label-volume = " %percentage% "

[module/text]
type = custom/script
exec = ~/.config/polybar/display-text.sh
tail = false

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-underline = ${colors.red}
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.darkmagenta}

;ramp-0 = ï‹‹
;ramp-foreground = ${colors.gray}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

vim:ft=dosini
