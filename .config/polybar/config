[bar/main]
; Syntax key = ${env:variable_name:fallback_value}
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 2.22222%
fixed-center = true

foreground = ${colors.foreground}
background = ${colors.background}

font-0 = ${xrdb:font:Noto Sans:pixelsize=16}
font-1 = "cryptocoins:style=Regular"
font-2 = "Noto Color Emoji:scale=10"
font-3 = "NotoEmoji Nerd Font Mono:style=Book"
font-4 = "Weather Icons:style=Regular"

modules-left = i3 
modules-center =
modules-right = crypto temperature pulseaudio-control battery 

enable-ipc = true

dpi = ${xrdb:dpi:96}
format-pulseaudio-margin = 30 

module-margin = 2

[bar/portrait]
inherit = bar/main
monitor = ${env:MONITOR:DP-1-2} 
height = 1.25%

;M O D U L E S

[module/i3]
type = internal/i3

pin-workspaces = true
index-sort = true
enable-click = false
enable-scroll = false

format = <label-state>

label-focused = "%index%"
label-focused-foreground = ${colors.highlight}
label-focused-background = ${colors.background}

label-separator = |
label-separator-padding = 2
label-separator-foreground = ${colors.foreground}

[module/battery]
type = custom/script
exec = ~/.config/polybar/battery-combined-shell.sh
interval = 100

[module/crypto]
type = custom/script
exec = ~/.config/polybar/ticker-ethusd.sh
interval = 100

[module/pulseaudio-control]
type = custom/script
tail = true
format-underline = ${colors.cyan}
label-padding = 2
label-foreground = ${colors.foreground}

; Consider the option '--color-muted <rrggbb>' as it currently default
; https://github.com/polybar/polybar/wiki/Formatting#format-tags-inside-polybar-config
; Modularize to work with colors defined above
; --icons-volume "ï€§ ,ï€¨ "
exec = pulseaudio-control --icon-muted "ðŸ”‡ " --format '$VOL_ICON ${VOL_LEVEL}% $NODE_NICKNAME' --node-nicknames-from "device.description" --node-nickname "alsa_output.usb-DisplayLink_Plugable_UD_6950H_190497-02.analog-stereo: ðŸ“»" --node-nickname "bluez_sink.E4_22_A5_2F_DF_DB.a2dp_sink: ðŸŽ§" listen
; exec = pulseaudio-control --icon-muted "ðŸ”‡ " --format '$VOL_ICON ${VOL_LEVEL}% $SINK_NICKNAME' --sink-nicknames-from "device.description" --sink-nickname "alsa_output.usb-DisplayLink_Plugable_UD_6950H_190497-02.analog-stereo: ðŸ“»" --sink-nickname "alsa_output.pci-0000_00_1f.3.analog-stereo: ðŸ’»" --sink-nickname "bluez_sink.E4_22_A5_2F_DF_DB.a2dp_sink: ðŸŽ§" listen

click-middle = exec pavucontrol &
click-left = pulseaudio-control togmute
