[module/corona]
type = custom/script
interval = 3600
format = <label>
exec = python ~/.config/polybar/coronaWidget.py -p "Illinois" -pre "ðŸ¦  " -ar -lo united-states

[module/weather]
type = custom/script
exec = ~/.config/polybar/openweathermap-fullfeatured.sh
interval = 600
label-font = 5
; Try to get only the icons to display in the $label-font, and not the numbers

[module/temperature]
type = internal/temperature

interval = 2
; Zone 4 is presumedly the battery's thermal zone
thermal-zone = 4
label = TEMP %temperature-c%
label-warn = TEMP %temperature-c%
label-warn-foreground = #FF0000

[settings]
